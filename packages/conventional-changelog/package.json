{
  "name": "@deopea.os/conventional-changelog",
  "version": "2.0.0",
  "private": false,
  "description": "conventional-changelog preset used by residents of deopea",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "typings"
  ],
  "scripts": {
    "build": "tsc",
    "fmt": "prettier --write --cache --cache-location \".turbo/.prettier-cache\" .",
    "lint": "TIMING=1 eslint --cache --cache-location \".turbo/.eslintcache\"",
    "release": "semantic-release",
    "test": "tsx --test src/index.test.ts"
  },
  "peerDependencies": {
    "conventional-changelog": "^5.1.0",
    "conventional-changelog-conventionalcommits": "^7.0.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@deopea.os/eslint-config": "^2.0.0",
    "@types/conventional-changelog": "^3.1.5",
    "@types/conventional-changelog-config-spec": "^2.1.5",
    "@types/node": "^20.11.25",
    "conventional-changelog-conventionalcommits": "*",
    "tsx": "^4.7.1",
    "typescript": "*"
  },
  "keywords": [
    "conventional-changelog",
    "conventional-changelog-preset"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/deopea-os/earth.git",
    "directory": "packages/conventional-changelog"
  },
  "author": {
    "name": "David",
    "url": "https://github.com/deopea-david"
  },
  "license": "MIT",
  "homepage": "https://github.com/deopea-os/earth/tree/main/packages/commitlint-config",
  "bugs": {
    "url": "https://github.com/deopea-os/earth/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}

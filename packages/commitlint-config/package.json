{
  "name": "@deopea.os/commitlint-config",
  "version": "2.0.0",
  "private": false,
  "description": "commitlint config used by the residents of deopea",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc",
    "fmt": "prettier --write --cache --cache-location \".cache/prettier/.prettier-cache\" .",
    "lint": "TIMING=1 eslint --cache --cache-location \".cache/eslint/.eslintcache\"",
    "release": "semantic-release"
  },
  "peerDependencies": {
    "@commitlint/config-conventional": "^19.0.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "typescript": "*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/deopea-os/earth.git",
    "directory": "packages/commitlint-config"
  },
  "keywords": [
    "commitlint",
    "commitlintconfig"
  ],
  "author": {
    "name": "David",
    "url": "https://github.com/deopea-david"
  },
  "license": "MIT",
  "homepage": "https://github.com/deopea-os/earth/tree/main/packages/commitlint-config",
  "bugs": {
    "url": "https://github.com/deopea-os/earth/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}

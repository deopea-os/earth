{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "fmt": {
      "outputs": [".turbo/.prettier-cache"]
    },
    "lint": {
      "outputs": [".turbo/.eslintcache"]
    },
    "release": {
      "env": ["GITHUB_TOKEN", "NPM_TOKEN"],
      "cache": false
    },
    "test": {},
    "test:watch": {
      "cache": false
    }
  }
}
